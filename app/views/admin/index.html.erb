<% @title = "Welcome, Login" %>
<% if flash[:notice] %>
    <p><%= flash[:notice] %></p> 
<% end %>
<h3>Please Log In</h3>
<div class="log_in">
    <%= form_tag(:action => :login_handler, :method => "get") do %> 
        <p><%= label_tag(:text_val, "Login to Your Account:") %></p> 
        <p>Email: <%= text_field_tag(:email_login) %></p>
        <p>Password: <%= password_field_tag(:password_login) %></p>
        <p><%= submit_tag("Submit") %></p>
    <% end %>
</div>
<br>
<h3>or... Sign Up!</h3>
<div class="sign_up">
    <%= form_for @team, :url => {:action => :signup_handler} do |f| %>
        <div>Team Name: <%= f.text_field(:team_name) %></div>
        <div>First Name: <%= f.text_field(:first_name) %></div>
        <div>Last Name: <%= f.text_field(:last_name) %></div>
        <div>Phone Number: <%= f.text_field(:phone) %></div>
        <div>Email: <%= f.text_field(:email) %></div>
        <div>Password: <%= f.password_field(:password) %></div>
        <div>Re-enter Password: <%= f.password_field(:password_confirmation) %></div>
        <p><%= submit_tag "Create Team" %></p>
    <% end %>
    <% if @team.errors.any? %>
        <% @team.errors.full_messages.each do |error| %>
            <div><%= error+" " %></div>
        <% end %>
    <% end %>
</div>
