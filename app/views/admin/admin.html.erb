<h3>Team Progress Table</h3>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>Team Name</th>
        <th>Contact's Name</th>
        <th>Email</th>
        <th>Phone #</th>
        <th>Clue #</th>
        <th>Time Spent on Current Clue</th>
        <th>Finish Place</th>
    </tr>
    <% @all_teams.each do |team| %>
        <tr>
            <td><%= team.team_name %></td>
            <td><%= team.first_name %> <%= team.last_name %></td>
            <td><%= team.email %></td>
            <td><%= team.phone %></td>
            <% if team.clue == 11 %>
                <td>Finished</td>
            <% else %>
                <td><%= team.clue %></td>
            <% end %>
            <% if team.clue != 1 %>
                <% if team.clue == 11 %>
                    <td>Completed <%= team.time_finished.localtime().strftime("%A at %I:%M %p") %></td>
                <% else %>
                    <td><%= ((@cur_time - team.time_finished)/60/60).to_i %> hours and <%= ((@cur_time - team.time_finished)/60).to_i%60 %> minutes</td>
                <% end %>
            <% else %>
                <td><%= ((@cur_time - @start_time)/60/60).to_i %> hours and <%= ((@cur_time - @start_time)/60).to_i%60 %> minutes</td>
            <% end %>
            <td><%= team.place %></td>
        </tr>
    <% end %>
</table>
