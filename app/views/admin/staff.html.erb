<% if flash[:notice] %>
    <h3 class="text-danger"><%= flash[:notice] %></h3> 
<% end %>
<h3>Please Log In</h3>
<div class="log_in">
    <%= form_tag(:action => :staff_login_handler, :method => "get") do %> 
        <p><%= label_tag(:text_val, "Login to Staff Account:") %></p> 
        <p>Password: <%= password_field_tag(:password_login) %></p>
        <p><%= submit_tag("Submit") %></p>
    <% end %>
</div>
